<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.liceoarzignano.bold" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".BoldApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >

        <!-- Main -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <!-- Mark -->
        <activity
            android:name=".marks.MarkListActivity"
            android:label="@string/title_activity_mark_list"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.MarksTheme" />

        <!-- Events -->
        <activity
            android:name=".events.EventListActivity"
            android:label="@string/title_activity_event_list"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- News -->
        <activity
            android:name=".news.NewsListActivity"
            android:label="@string/nav_news"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- Editor -->
        <activity
            android:name=".ManagerActivity"
            android:label="@string/title_activity_manager"
            android:parentActivityName=".marks.MarkListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />

        <!-- Settings -->
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.SettingsTheme" />

        <!-- Safe -->
        <activity
            android:name=".safe.SafeActivity"
            android:label="@string/title_activity_safe"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Backup -->
        <activity
            android:name=".backup.BackupActivity"
            android:label="@string/title_activity_backup"
            android:parentActivityName=".settings.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Benefits -->
        <activity
            android:name=".intro.BenefitsActivity"
            android:label="@string/slide_button"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Services -->
        <service
            android:name=".events.AlarmService"
            android:enabled="true" />
        <service
            android:name=".firebase.BoldMessagingService"
            tools:ignore="ExportedService" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".firebase.BoldInstanceIdService"
            tools:ignore="ExportedService" >
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- Boot receiver -->
        <receiver
            android:name=".events.BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>