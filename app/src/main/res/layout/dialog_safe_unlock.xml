<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="20dp"
            android:text="@string/safe_dialog_title"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/safe_dialog_fingerprint_auth"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_fingerprint"
            app:tint="@color/icon" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/safe_dialog_input_layout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_toRightOf="@id/safe_dialog_fingerprint_auth"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/safe_dialog_input"
                style="@style/AppTheme.SafeInputText"
                android:hint="@string/safe_dialog_password_input_hint" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/safe_dialog_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/safe_dialog_input_layout"
            android:paddingTop="8dp"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
