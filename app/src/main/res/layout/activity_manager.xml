<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="8dp"
            app:theme="@style/AppTheme.ToolbarTheme"
            tools:targetApi="lollipop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="?actionBarSize">
            <LinearLayout
                android:id="@+id/manager_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:id="@+id/title_image"
                        app:srcCompat="@drawable/ic_title"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/accessibility_generic_icon"/>

                    <EditText
                        android:id="@+id/title_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:ellipsize="start"
                        android:background="@android:color/transparent"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@id/title_image"
                        tools:ignore="TextFields" />
                </RelativeLayout>

                <!-- Subject picker -->
                <RelativeLayout
                    android:id="@+id/subject_layout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:clickable="true"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:id="@+id/subject_image"
                        app:srcCompat="@drawable/ic_title"
                        android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/accessibility_generic_icon"/>

                    <TextView
                        android:id="@+id/subjects_selector"
                        android:gravity="center_vertical"
                        android:text="@string/select_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@id/subject_image" />
                </RelativeLayout>

                <!-- Notes -->
                <RelativeLayout
                    android:id="@+id/notes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:id="@+id/notes_image"
                        app:srcCompat="@drawable/ic_notes"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/accessibility_generic_icon"/>

                    <EditText
                        android:id="@+id/notes_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:ellipsize="start"
                        android:hint="@string/hint_notes"
                        android:background="@android:color/transparent"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@id/notes_image"/>
                </RelativeLayout>

                <!-- Event category spinner -->
                <RelativeLayout
                    android:id="@+id/event_spinner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:clickable="true"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:id="@+id/category_image"
                        app:srcCompat="@drawable/ic_category"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/accessibility_generic_icon"/>

                    <Spinner
                        android:id="@+id/event_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@id/category_image"
                        />
                </RelativeLayout>

                <!-- Mark value -->
                <RelativeLayout
                    android:id="@+id/mark_value_layout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:clickable="true"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:id="@+id/mark_value_image"
                        app:srcCompat="@drawable/ic_trophy"
                        android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/accessibility_generic_icon"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@id/mark_value_image">
                        <TextView
                            android:id="@+id/mark_preview"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text="@string/default_mark"
                            android:gravity="center_vertical"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- Date picker -->
                <RelativeLayout
                    android:id="@+id/date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:clickable="true"
                    android:background="?selectableItemBackground">

                    <ImageView
                        android:id="@+id/date_image"
                        app:srcCompat="@drawable/ic_calendar"
                        android:gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/accessibility_generic_icon"/>

                    <TextView
                        android:id="@+id/datepicker_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingLeft="16dp"
                        android:layout_toRightOf="@id/date_image"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_done"
        android:transitionName="fab"
        tools:targetApi="lollipop"/>

</android.support.design.widget.CoordinatorLayout>
