<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="421dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/AppTheme.BottomSheetLayout">

                <ImageView
                    style="@style/AppTheme.BottomSheetIcon"
                    app:srcCompat="@drawable/ic_title" />

                <TextView
                    android:id="@+id/viewer_title"
                    style="@style/AppTheme.BottomSheetText"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout style="@style/AppTheme.BottomSheetLayout">

                <ImageView
                    android:id="@+id/viewer_value_icon"
                    style="@style/AppTheme.BottomSheetIcon"
                    app:srcCompat="@drawable/ic_trophy" />

                <TextView
                    android:id="@+id/viewer_value"
                    style="@style/AppTheme.BottomSheetText" />
            </LinearLayout>

            <LinearLayout style="@style/AppTheme.BottomSheetLayout">

                <ImageView
                    style="@style/AppTheme.BottomSheetIcon"
                    app:srcCompat="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/viewer_date"
                    style="@style/AppTheme.BottomSheetText" />
            </LinearLayout>

            <LinearLayout
                style="@style/AppTheme.BottomSheetLayout"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:minHeight="60dp">

                <ImageView
                    style="@style/AppTheme.BottomSheetIcon"
                    app:srcCompat="@drawable/ic_notes" />

                <TextView
                    android:id="@+id/viewer_notes"
                    style="@style/AppTheme.BottomSheetText" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/empty_text" />

            <LinearLayout
                android:id="@+id/viewer_edit_layout"
                style="@style/AppTheme.BottomSheetLayout">

                <ImageView
                    android:id="@+id/viewer_edit_icon"
                    style="@style/AppTheme.BottomSheetIcon"
                    app:srcCompat="@drawable/avd_edit" />

                <TextView
                    style="@style/AppTheme.BottomSheetText"
                    android:text="@string/viewer_edit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewer_share_layout"
                style="@style/AppTheme.BottomSheetLayout">

                <ImageView
                    android:id="@+id/viewer_share_icon"
                    style="@style/AppTheme.BottomSheetIcon"
                    app:srcCompat="@drawable/avd_share" />

                <TextView
                    style="@style/AppTheme.BottomSheetText"
                    android:text="@string/viewer_share" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewer_remove_layout"
                style="@style/AppTheme.BottomSheetLayout">

                <ImageView
                    android:id="@+id/viewer_remove_icon"
                    style="@style/AppTheme.BottomSheetIcon"
                    app:srcCompat="@drawable/avd_remove" />

                <TextView
                    style="@style/AppTheme.BottomSheetText"
                    android:text="@string/viewer_remove" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
