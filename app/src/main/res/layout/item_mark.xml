<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_mark_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:clipToPadding="false"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="56dp"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/item_horizontal_margin"
    android:paddingRight="@dimen/item_horizontal_margin"
    android:paddingTop="16dp"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/row_mark_value"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/row_mark_expand"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_expand" />

    <TextView
        android:id="@+id/row_mark_date"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="32dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/row_mark_summary"
        style="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_mark_date"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/text_secondary"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/row_mark_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_mark_summary"
        android:gravity="right"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/row_mark_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/avd_share" />

        <ImageButton
            android:id="@+id/row_mark_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/avd_edit" />

        <ImageButton
            android:id="@+id/row_mark_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/avd_remove" />
    </LinearLayout>
</RelativeLayout>
