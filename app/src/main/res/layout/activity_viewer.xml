<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewer_background"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/viewerPrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="24dp"
                    android:paddingLeft="72dp"
                    android:paddingRight="8dp"
                    android:paddingTop="24dp">

                    <!-- Value / Category -->
                    <TextView
                        android:id="@+id/viewer_value_title"
                        style="@style/ViewerTheme.Title"
                        android:text="@string/viewer_values" />

                    <TextView
                        android:id="@+id/viewer_value"
                        style="@style/ViewerTheme.Text" />

                    <!-- Date -->
                    <TextView
                        style="@style/ViewerTheme.Title"
                        android:text="@string/viewer_date" />

                    <TextView
                        android:id="@+id/viewer_dates"
                        style="@style/ViewerTheme.Text" />

                    <!-- Notes -->
                    <TextView
                        style="@style/ViewerTheme.Title"
                        android:text="@string/viewer_notes" />

                    <TextView
                        android:id="@+id/viewer_notes"
                        style="@style/ViewerTheme.Text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <Button
                        android:id="@+id/viewer_btn_share"
                        style="@style/ViewerTheme.Button"
                        android:drawableTop="@drawable/avd_share"
                        android:text="@string/viewer_share" />

                    <Button
                        android:id="@+id/viewer_btn_more"
                        style="@style/ViewerTheme.Button"
                        android:drawableTop="@drawable/avd_views"
                        android:text="@string/viewer_remove" />

                    <Button
                        android:id="@+id/viewer_btn_delete"
                        style="@style/ViewerTheme.Button"
                        android:drawableTop="@drawable/avd_remove"
                        android:text="@string/viewer_remove" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:elevation="0dp"
            app:theme="@style/ViewerTheme.ToolbarTheme"
            tools:targetApi="lollipop" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:transitionName="fab"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_edit"
        tools:targetApi="lollipop" />
</android.support.design.widget.CoordinatorLayout>