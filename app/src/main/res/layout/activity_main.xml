<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="8dp"
            app:theme="@style/AppTheme.ToolbarTheme"
            tools:targetApi="lollipop" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingTop="?attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_bottom_margin"
                android:paddingTop="16dp">

                <!-- Welcome card -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    card_view:cardBackgroundColor="@color/card_background_default"
                    card_view:cardElevation="2dp"
                    card_view:contentPaddingBottom="@dimen/card_content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/accessibility_welcome"
                            android:src="@drawable/welcome" />

                        <TextView
                            style="@style/home_card_text"
                            android:text="@string/welcome"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            style="@style/home_card_text"
                            android:text="@string/welcome_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_secondary_size" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/upcomingCardSeparatorView"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:visibility="gone" />

                <!-- Events card -->
                <android.support.v7.widget.CardView
                    android:id="@+id/upcomingCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="@color/card_background_default"
                    card_view:cardElevation="2dp"
                    card_view:contentPaddingBottom="@dimen/card_content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/home_card_text"
                            android:paddingTop="@dimen/card_content_padding"
                            android:text="@string/upcoming_events"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <LinearLayout
                            android:id="@+id/upcomingLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/proactive_title_1"
                                style="@style/AppTheme.HomeText_Title" />

                            <TextView
                                android:id="@+id/proactive_sec_1"
                                style="@style/AppTheme.HomeText_Secondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/upcomingLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/proactive_title_2"
                                style="@style/AppTheme.HomeText_Title" />

                            <TextView
                                android:id="@+id/proactive_sec_2"
                                style="@style/AppTheme.HomeText_Secondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/upcomingLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/proactive_title_3"
                                style="@style/AppTheme.HomeText_Title" />

                            <TextView
                                android:id="@+id/proactive_sec_3"
                                style="@style/AppTheme.HomeText_Secondary" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/more_events_button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:visibility="gone" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:id="@+id/suggestionSeparatorView"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:visibility="gone" />

                <!-- Suggestions -->
                <android.support.v7.widget.CardView
                    android:id="@+id/suggestionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:visibility="gone"
                    card_view:cardBackgroundColor="@color/card_background_default"
                    card_view:cardElevation="2dp"
                    card_view:contentPaddingBottom="@dimen/card_content_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/home_card_text"
                            android:text="@string/suggestions"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/suggestion_text"
                            style="@style/home_card_text"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_secondary_size" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>
