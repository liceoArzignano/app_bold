<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorLayout">

        <!-- Toolbar -->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height_view"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:src="@drawable/welcome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    tools:targetApi="lollipop" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:theme="@style/AppTheme.ToolbarTheme"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:titleTextColor="@color/icon"
                    tools:targetApi="m" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <!-- Content view -->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:background="@color/home_background"
                android:paddingLeft="@dimen/card_margin"
                android:paddingRight="@dimen/card_margin"
                android:paddingBottom="@dimen/activity_bottom_margin">

                <!-- Events -->
                <TextView
                    android:id="@+id/events_separator"
                    android:text="@string/upcoming_events"
                    style="@style/AppTheme.HomeTitle" />

                <android.support.v7.widget.CardView
                    android:id="@+id/events_card"
                    style="@style/AppTheme.HomeCard"
                    app:cardCornerRadius="1dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        style="@style/AppTheme.HomeCardContent">
                        <LinearLayout
                            android:id="@+id/events_layout_1"
                            style="@style/AppTheme.HomeCardListLayout">

                            <TextView
                                android:id="@+id/events_title_1"
                                style="@style/AppTheme.HomeTextCardTitle" />

                            <TextView
                                android:id="@+id/events_sec_1"
                                style="@style/AppTheme.HomeTextCardSecondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/events_layout_2"
                            style="@style/AppTheme.HomeCardListLayout">

                            <TextView
                                android:id="@+id/events_title_2"
                                style="@style/AppTheme.HomeTextCardTitle" />

                            <TextView
                                android:id="@+id/events_sec_2"
                                style="@style/AppTheme.HomeTextCardSecondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/events_layout_3"
                            style="@style/AppTheme.HomeCardListLayout">

                            <TextView
                                android:id="@+id/events_title_3"
                                style="@style/AppTheme.HomeTextCardTitle" />

                            <TextView
                                android:id="@+id/events_sec_3"
                                style="@style/AppTheme.HomeTextCardSecondary" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/more_events_button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:visibility="gone" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- Marks -->
                <TextView
                    android:id="@+id/marks_separator"
                    android:text="@string/lastest_marks"
                    style="@style/AppTheme.HomeTitle" />

                <android.support.v7.widget.CardView
                    android:id="@+id/marks_card"
                    style="@style/AppTheme.HomeCard"
                    app:cardCornerRadius="1dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        style="@style/AppTheme.HomeCardContent">

                        <LinearLayout
                            android:id="@+id/marks_layout1"
                            style="@style/AppTheme.HomeCardListLayout">

                            <TextView
                                android:id="@+id/marks_title_1"
                                style="@style/AppTheme.HomeTextCardTitle" />

                            <TextView
                                android:id="@+id/marks_sec_1"
                                style="@style/AppTheme.HomeTextCardSecondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/marks_layout2"
                            style="@style/AppTheme.HomeCardListLayout">

                            <TextView
                                android:id="@+id/marks_title_2"
                                style="@style/AppTheme.HomeTextCardTitle" />

                            <TextView
                                android:id="@+id/marks_sec_2"
                                style="@style/AppTheme.HomeTextCardSecondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/marks_layout3"
                            style="@style/AppTheme.HomeCardListLayout">

                            <TextView
                                android:id="@+id/marks_title_3"
                                style="@style/AppTheme.HomeTextCardTitle" />

                            <TextView
                                android:id="@+id/marks_sec_3"
                                style="@style/AppTheme.HomeTextCardSecondary" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- Suggestions -->
                <TextView
                    android:id="@+id/suggestions_separator"
                    android:text="@string/suggestions"
                    style="@style/AppTheme.HomeTitle" />

                <android.support.v7.widget.CardView
                    android:id="@+id/suggestions_card"
                    style="@style/AppTheme.HomeCard"
                    app:cardCornerRadius="1dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        style="@style/AppTheme.HomeCardContent">
                        <TextView
                            android:id="@+id/suggestions_text"
                            style="@style/AppTheme.HomeTextCardSecondary"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="24dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" />
</android.support.v4.widget.DrawerLayout>
