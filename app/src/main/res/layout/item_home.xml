<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_item_name"
        style="@style/AppTheme.HomeTitle" />

    <android.support.v7.widget.CardView
        android:id="@+id/home_item_card"
        style="@style/AppTheme.HomeCard"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <LinearLayout style="@style/AppTheme.HomeCardContent">

            <LinearLayout
                android:id="@+id/home_item_layout_0"
                style="@style/AppTheme.HomeCardListLayout">

                <TextView
                    android:id="@+id/home_item_title_0"
                    style="@style/AppTheme.HomeTextCardTitle" />

                <TextView
                    android:id="@+id/home_item_sec_0"
                    style="@style/AppTheme.HomeTextCardSecondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_item_layout_1"
                style="@style/AppTheme.HomeCardListLayout">

                <TextView
                    android:id="@+id/home_item_title_1"
                    style="@style/AppTheme.HomeTextCardTitle" />

                <TextView
                    android:id="@+id/home_item_sec_1"
                    style="@style/AppTheme.HomeTextCardSecondary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_item_layout_2"
                style="@style/AppTheme.HomeCardListLayout">

                <TextView
                    android:id="@+id/home_item_title_2"
                    style="@style/AppTheme.HomeTextCardTitle" />

                <TextView
                    android:id="@+id/home_item_sec_2"
                    style="@style/AppTheme.HomeTextCardSecondary" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp" />
</LinearLayout>
