<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_item_name"
        style="@style/AppTheme.HomeTitle"
        tools:text="Riepilogo settimanale" />

    <android.support.v7.widget.CardView
        android:id="@+id/home_item_card"
        style="@style/AppTheme.HomeCard"
        android:transitionName="card_activity"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        tools:targetApi="lollipop">

        <LinearLayout style="@style/AppTheme.HomeCardContent">

            <TextView
                android:id="@+id/home_item_text"
                style="@style/AppTheme.HomeTextCard"
                tools:text="Questa settimana ci sono\n\u2022 2 verifiche (la prossima venerdi)\n\u2022 Un compleanno (giovedi)\n\u2022 10 compiti per casa" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/home_item_action"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                tools:text="Add a mark" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp" />
</LinearLayout>
