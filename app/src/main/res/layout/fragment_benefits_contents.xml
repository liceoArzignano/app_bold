<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/intro_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_title"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Step 1 - Welcome animation -->
    <LinearLayout
        android:id="@+id/step_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/intro_message"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/intro_animation"
            android:layout_width="220dp"
            android:layout_height="220dp" />
    </LinearLayout>

    <!-- Step 2 - Address selection -->

    <RadioGroup
        android:id="@+id/step_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_message"
        android:orientation="vertical"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/intro_address_1"
            style="@style/AppTheme.Radio"
            android:text="@string/pref_address_1" />

        <RadioButton
            android:id="@+id/intro_address_2"
            style="@style/AppTheme.Radio"
            android:text="@string/pref_address_2" />

        <RadioButton
            android:id="@+id/intro_address_3"
            style="@style/AppTheme.Radio"
            android:text="@string/pref_address_3" />

        <RadioButton
            android:id="@+id/intro_address_4"
            style="@style/AppTheme.Radio"
            android:text="@string/pref_address_4" />

        <RadioButton
            android:id="@+id/intro_address_5"
            style="@style/AppTheme.Radio"
            android:text="@string/pref_address_5" />

        <RadioButton
            android:id="@+id/intro_address_6"
            style="@style/AppTheme.Radio"
            android:text="@string/pref_address_teacher" />
    </RadioGroup>
</RelativeLayout>
