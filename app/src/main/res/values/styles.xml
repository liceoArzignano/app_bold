<resources>

    <!-- AppTheme -->

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SettingsTheme" parent="@style/AppTheme.NoActionBar">
        <item name="alertDialogTheme">@style/AppTheme.PreferenceDialog</item>
    </style>

    <style name="AppTheme.PreferenceDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="AppTheme.ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/icon</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.CollapsingToolbarTitle" parent="AppTheme.ToolbarTitle">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.HomeCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.HomeTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.HomeCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/card_margin</item>
        <item name="android:paddingRight">@dimen/card_margin</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.HomeTextCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.HomeCardListLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.EditorIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="AppTheme.EditorInput">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="AppTheme.EditorEditText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.EditorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="AppTheme.SafeInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">start</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.EmptyLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.EmptyImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.EmptyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/empty_text</item>
        <item name="android:paddingTop">19dp</item>
    </style>

    <style name="AppTheme.BottomSheetLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.BottomSheetIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/editor_icon</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="AppTheme.BottomSheetText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="AppTheme.Radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hapticFeedbackEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TapTarget">
        <item name="mttp_backgroundColour">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme.TapTargetHome" parent="AppTheme.TapTarget">
        <item name="mttp_focalColour">@color/colorPrimaryDark</item>
    </style>

</resources>
